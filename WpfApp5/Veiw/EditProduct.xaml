<Window x:Class="WpfApp5.Veiw.EditProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5.Veiw"
        mc:Ignorable="d"
        Title="Edit Product" Height="310" Width="350">
    <Grid Background="DarkOrange">
        <StackPanel Width="300">
            <Label HorizontalContentAlignment="Left" FontSize="20">ID</Label>
            <TextBox Foreground="DeepSkyBlue" FontSize="20" Text="{Binding product.Id, UpdateSourceTrigger=PropertyChanged}"></TextBox>

            <Label HorizontalContentAlignment="Left" FontSize="20">Name</Label>
            <TextBox Foreground="DeepSkyBlue" FontSize="20" Text="{Binding product.Name, UpdateSourceTrigger=PropertyChanged}"></TextBox>

            <Label HorizontalContentAlignment="Left" FontSize="20">Price</Label>
            <TextBox Foreground="DeepSkyBlue" FontSize="20" Text="{Binding  product.Price, UpdateSourceTrigger=PropertyChanged}"></TextBox>

            <Label HorizontalContentAlignment="Left" FontSize="20">Date Time</Label>
            <TextBox Foreground="DeepSkyBlue" FontSize="20" Text="{Binding product.DateTime, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        </StackPanel>
    </Grid>
</Window>